Você perderá a vantagem de operar como uma máquina bem orquestrada, ficando atrás de concorrentes com times verdadeiramente integrados.`,
            },
        ],
    }

    const handleSelect = (valor) => {
        const blocoAtual = perguntas[step].bloco
        setScores({
            ...scores,
            [blocoAtual]: (scores[blocoAtual] || 0) + valor,
        })

        const proximoStep = step + 1
        if (proximoStep >= perguntas.length) {
            setFase("resultado")
        } else {
            setStep(proximoStep)
        }
    }

    const getResultado = (bloco) => {
        const score = scores[bloco] || 0
        const faixa = resultados[bloco].find(
            (r) => score >= r.faixa[0] && score <= r.faixa[1]
        )
        return faixa ? { ...faixa, score } : null
    }

    if (fase === "inicio") {
        return (
            <div style={{ padding: 32, textAlign: "center" }}>
                <button
                    onClick={() => setFase("form")}
                    style={{
                        background: "#fff",
                        color: "#000",
                        padding: "16px 32px",
                        fontSize: 18,
                        borderRadius: 8,
                        border: "1px solid #ccc",
                        cursor: "pointer",
                    }}
                >
                    Começar Diagnóstico
                </button>
            </div>
        )
    }

    if (fase === "form") {
        const handleChange = (e) => {
            const { name, value } = e.target
            if (name === "phone") {
                const raw = value.replace(/\D/g, "")
                const formatted = raw
                    .replace(/^(\d{2})(\d)/, "($1) $2")
                    .replace(/(\d{5})(\d)/, "$1-$2")
                    .slice(0, 15)
                setFormData({ ...formData, [name]: formatted })
            } else {
                setFormData({ ...formData, [name]: value })
            }
        }

        const handleSubmit = () => {
            if (formData.firstName && formData.phone && formData.email) {
                setFase("quiz")
            } else {
                alert("Por favor, preencha todos os campos.")
            }
        }

        return (
            <div style={{ maxWidth: 400, margin: "0 auto", padding: 32 }}>
                <h2 style={{ fontSize: 24, marginBottom: 16 }}>
                    Preencha seus dados para iniciar
                </h2>
                <input
                    type="text"
                    name="firstName"
                    placeholder="Nome *"
                    value={formData.firstName}
                    onChange={handleChange}
                    style={inputStyle}
                />
                <input
                    type="text"
                    name="phone"
                    placeholder="Whatsapp *"
                    value={formData.phone}
                    onChange={handleChange}
                    style={inputStyle}
                />
                <input
                    type="email"
                    name="email"
                    placeholder="Email *"
                    value={formData.email}
                    onChange={handleChange}
                    style={inputStyle}
                />
                <button
                    onClick={handleSubmit}
                    style={{
                        width: "100%",
                        background: "#fff",
                        color: "#000",
                        padding: 14,
                        fontSize: 16,
                        marginTop: 12,
                        border: "1px solid #ccc",
                        borderRadius: 8,
                        cursor: "pointer",
                    }}
                >
                    Iniciar
                </button>
            </div>
        )
    }

    if (fase === "quiz") {
        const bloco = perguntas[step]
        const questao = bloco.questao

        return (
            <div
                style={{
                    padding: 32,
                    fontFamily: "Inter, sans-serif",
                    textAlign: "center",
                }}
            >
                <h2 style={{ fontSize: 24, fontWeight: 600, marginBottom: 16 }}>
                    {bloco.titulo}
                </h2>
                <p style={{ fontSize: 18, marginBottom: 24 }}>
                    {questao.texto}
                </p>
                <div
                    style={{
                        display: "grid",
                        gridTemplateColumns: "1fr 1fr",
                        gap: 16,
                        maxWidth: 800,
                        margin: "0 auto",
                    }}
                >
                    {questao.opcoes.map((op, index) => (
                        <button
                            key={index}
                            onClick={() => handleSelect(op.valor)}
                            style={{
                                padding: "16px 20px",
                                background: "#fff",
                                color: "#000",
                                border: "1px solid #ccc",
                                borderRadius: 12,
                                fontSize: 16,
                                cursor: "pointer",
                                textAlign: "left",
                            }}
                        >
                            {op.texto}
                        </button>
                    ))}
                </div>
            </div>
        )
    }

    if (fase === "resultado") {
        return (
            <div style={{ padding: 32, fontFamily: "Inter, sans-serif" }}>
                <h2 style={{ fontSize: 28, fontWeight: 600, marginBottom: 24 }}>
                    Seu Diagnóstico
                </h2>
                {Object.keys(scores).map((bloco) => {
                    const res = getResultado(bloco)
                    return (
                        <div key={bloco} style={{ marginBottom: 32 }}>
                            <h3 style={{ fontSize: 20, fontWeight: 600 }}>
                                {res.nivel} - {bloco} ({res.score} pts)
                            </h3>
                            <pre
                                style={{ fontSize: 14, whiteSpace: "pre-wrap" }}
                            >
                                {res.texto}
                            </pre>
                        </div>
                    )
                })}
            </div>
        )
    }

    return null
}

const inputStyle = {
    width: "100%",
    padding: 12,
    marginBottom: 12,
    fontSize: 16,
    border: "1px solid #ccc",
    borderRadius: 8,
}
